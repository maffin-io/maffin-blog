{
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "react-app",
    "react-app/jest",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "next/core-web-vitals"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "overrides": [
    {
      "files": [
        "src/**/*.ts?(x)",
        "src/**/*.test.ts?(x)"
      ]
    }
  ],
  "rules": {
    "arrow-parens": "off",
    "@typescript-eslint/ban-ts-comment": "off"
  }
}
